{
  "expo": {
    "name": "CricsHub",
    "slug": "CricsHub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "cricshub",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.cricshub.team",
      "buildNumber": "1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow CricsHub to access your photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow CricsHub to save photos to your library.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "package": "dev.cricshub.team",
      "versionCode": 5,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/iconLogo.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow CricsHub to access your photos.",
          "savePhotosPermission": "Allow CricsHub to save photos.",
          "isAccessMediaLocationEnabled": true,
          "granularPermissions": [
            "photo",
            "video"
          ]
        }
      ],
      "expo-router"
    ],
    "extra": {
      "BASE_URL": "https://app.cricshub.com/api/v1",
      "router": {},
      "eas": {
        "projectId": "4c4b1af0-2ee1-49a4-a64a-f084909f09fc"
      }
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "owner": "cricshub"
  }
}