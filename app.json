{
  "expo": {
    "name": "CricsHub",
    "slug": "CricsHub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "cricshub",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow CricsHub to access your photos.",
          "savePhotosPermission": "Allow CricsHub to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-router"
    ],
    "extra": {
      "BASE_URL": "https:app.cricshub.com/api/v1"
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
